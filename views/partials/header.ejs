<!-- page header.ejs -->
<header id="tt-header">
    <div class="container">
        <div class="row tt-row no-gutters">
            <div class="col-auto">
                <!-- toggle mobile menu -->
                <a class="toggle-mobile-menu" href="#">
                    <svg class="tt-icon">
                      <use xlink:href="#icon-menu_icon"></use>
                    </svg>
                </a>
            
                <!-- /toggle mobile menu -->
                <!-- logo -->
                <div class="tt-logo">
                    <a href="/page-categories"><img src="/image/logo_beac.jpeg" alt=""></a>
                </div>
                <!-- /logo -->
                <!-- desctop menu -->
                  <div class="tt-desktop-menu">
                    <nav>
                        <ul>
                            <li><a href="/page-categories"><span>Categories</span></a></li>
                 
                            <li><a href="/page-create-topic"><span>New Post</span></a></li>
                     
                        </ul>
                    </nav>
                </div>
                <!-- /desctop menu -->
                <!-- tt-search -->
                <div class="tt-search">
                    <!-- toggle -->
                    <button class="tt-search-toggle" data-toggle="modal" data-target="#modalAdvancedSearch">
                       <svg class="tt-icon">
                          <use xlink:href="#icon-search"></use>
                        </svg>
                    </button>
                    <!-- /toggle -->
                    <form class="search-wrapper" action="/search" method="GET">
                        <div class="search-form" >
                            <input type="text"  id="searchInput" name="q" class="tt-search__input" placeholder="Search">
                            <button class="tt-search__btn" type="submit">
                               <svg class="tt-icon">
                                  <use xlink:href="#icon-search"></use>
                                </svg>
                            </button>
                             <button class="tt-search__close">
                               <svg class="tt-icon">
                                  <use xlink:href="#cancel"></use>
                                </svg>
                            </button>
                        </div>
                    
                    </form>
                </div>
        
            </div>
           
            <div class="col-auto ml-auto">
                <div class="tt-user-info d-flex justify-content-center">
                    <a href="/notification" class="tt-btn-icon">
                        <i class="tt-icon <%= unreadCount > 0 ? 'icon-unread' : '' %>">
                            <svg><use xlink:href="#icon-notification"></use></svg>
                        </i>
                        <span class="badge badge-danger <%= unreadCount > 0 ? '' : 'd-none' %>">
                            <%= unreadCount %>
                        </span>
                    </a>
            
                    <div class="tt-avatar-icon tt-size-md">
                        <% if (typeof username === 'string' && username.length > 0) { %>
                            <% const firstLetter = username.charAt(0).toLowerCase(); %>
                            <i class="tt-icon"><svg><use xlink:href="#icon-ava-<%= firstLetter %>"></use></svg></i>
                        <% } else { %>
                            <i class="tt-icon"><svg><use xlink:href="#icon-ava-default"></use></svg></i>
                        <% } %>
                    </div>
            
                    <div class="custom-select-01">
                        <select onchange="if (this.value === 'logout') { window.location.href = '/logout'; }">
                            <option value="Default Sorting"><%= username %></option>
                            <option value="logout">Log out</option>
                        </select>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</header>